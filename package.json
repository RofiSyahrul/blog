{
  "private": true,
  "name": "remix-blog",
  "description": "A developer blog built with Remix ðŸ’¿",
  "version": "0.0.1",
  "license": "",
  "scripts": {
    "clean": "rm -rf build public/build",
    "generate-manifest": "node -r esbuild-register scripts/generate-manifest.ts",
    "prebuild": "yarn generate-manifest",
    "build": "remix build",
    "predev": "yarn generate-manifest",
    "dev": "pm2-dev ./pm2.config.js",
    "build:local": "yarn generate-manifest && node -r dotenv/config node_modules/.bin/remix build",
    "start:local": "node -r dotenv/config node_modules/.bin/remix-serve build",
    "postinstall": "remix setup node",
    "deploy": "fly deploy --remote-only",
    "start": "remix-serve build"
  },
  "dependencies": {
    "@remix-run/dev": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "@remix-run/serve": "^1.1.1",
    "front-matter": "^4.0.2",
    "marked": "^4.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.1",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.3.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/marked": "^4.0.1",
    "@types/node": "^16.11.12",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "autoprefixer": "^10.4.0",
    "dotenv": "^10.0.0",
    "esbuild-register": "^3.2.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb": "^19.0.2",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-next": "^12.0.7",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-import-alias": "^1.2.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "pm2": "^5.1.2",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.0.2",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.5.3"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
